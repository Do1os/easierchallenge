{
  "manifest_version": 2,
  "name": "easierchallenge",
  "version": "1.0",

  "description": "simple extension that uses gemini api to generate code for hackerrank problems",
   
  "browser_specific_settings": {
  "gecko": {
    "id": "@thisismyeasierchallenge_extension",
    "data_collection_permissions": { 
        "required":["none"]
    }
}
},
  "icons": {
    "48": "border-48.png"
  },
  "browser_action":{
    "default_icon":"border-48.png",
    "default_popup":"popup.html",
    "default_title":"easierchallenge"
  },

  "hostpermissions":["*://*.hackerrank.com/contests/*" , "https://generativelanguage.googleapis.com/*"],

  "permissions":["activeTab","storage","clipboardWrite"],

  "content_scripts": [
    {
      "matches": ["*://*.hackerrank.com/contests/*"],
      "js": ["gem.js"],
      "css":["styles.css"]
    }
  ],

  "background":{
    "scripts":["background.js"],
    "persistent":false 
 }
}
  
